<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="50"
    tools:context=".BattleRoom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/black"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play!"
            android:textColor="@color/white"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:background="@drawable/edgeborderbtn"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/battle_cal_img"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"/>
            <TextView
                android:id="@+id/battleRoomDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black" />
        </FrameLayout>

         <FrameLayout
             android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:background="@drawable/edgeborderbtn"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/battle_point_img"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"/>
            <TextView
                android:id="@+id/battleRoomPointTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_weight="4">


        <ImageView
            android:id="@+id/battleRoomBattleFragmentBtn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.43"
            android:scaleType="fitXY"
            android:src="@drawable/battlefragbtnclick"/>

        <ImageView
            android:id="@+id/battleRoomBattleInfoFragmentBtn2"
            android:layout_weight="2.43"
            android:layout_width="0dp"
            android:scaleType="fitXY"

            android:layout_height="match_parent"
            android:src="@drawable/battlgrapbtn2"/>


    </LinearLayout>

    <androidx.percentlayout.widget.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30">

        <ImageView
            android:background="@drawable/battleframe"
            android:layout_gravity="center_horizontal"
            app:layout_widthPercent="97%"
            app:layout_heightPercent="100%"/>

        <FrameLayout
            android:id="@+id/battleRoomFragContainer2"
            android:layout_gravity="center_horizontal"
            app:layout_widthPercent="95%"
            app:layout_heightPercent="99%">

        </FrameLayout>


    </androidx.percentlayout.widget.PercentFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:background="@color/black"
        android:gravity="center_vertical|center_horizontal">
        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_marginRight="50dp" >

            <ImageView
                android:id="@+id/battleRoomIvMission"
                android:background="@drawable/layoutborderbutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:text="미션"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/battle_misson_img"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="90dp" >

            <ImageView
                android:id="@+id/battleRoomIvChat"
                android:background="@drawable/layoutborderbutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:text="채팅"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/battle_chat_img"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_marginLeft="50dp" >

            <ImageView
                android:id="@+id/battleRoomIvPoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/layoutborderbutton" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:text="포인트"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/battle_point_img"/>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>