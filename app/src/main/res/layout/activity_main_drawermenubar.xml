<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dddddd"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/NavTvUserIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/navlogo"></ImageView>

        <TextView
            android:id="@+id/NavTvUserID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NavTvUserIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/dalmoorifont"
            android:textColor="#000000"
            android:textSize="15dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NavTvUserID"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NavTvUserLV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dalmoorifont"
                android:gravity="right"
                android:paddingTop="5dp"
                android:text="Lv."
                android:textColor="#000000"
                android:textSize="20dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/main_nav_btn_battle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="245dp"
            android:background="@drawable/buttoncustom"
            android:fontFamily="@font/dalmoorifont"
            android:gravity="center"
            android:onClick="OnClick"
            android:padding="20dp"
            android:text="다이어트 대결"
            android:textColor="#ffffff"></TextView>

        <TextView
            android:id="@+id/main_nav_btn_kal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="345dp"
            android:background="@drawable/buttoncustom"
            android:fontFamily="@font/dalmoorifont"
            android:gravity="center"
            android:onClick="OnClick"
            android:padding="20dp"
            android:text="칼로리 계산기"
            android:textColor="#ffffff"></TextView>

        <TextView
            android:id="@+id/main_nav_btn_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="445dp"
            android:background="@drawable/buttoncustom"
            android:fontFamily="@font/dalmoorifont"
            android:gravity="center"
            android:onClick="OnClick"
            android:padding="20dp"
            android:text="게시판"
            android:textColor="#ffffff"></TextView>

        <TextView
            android:id="@+id/nav_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="550dp"
            android:fontFamily="@font/dalmoorifont"
            android:text="로그아웃"
            android:textColor="#000000"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/nav_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="600dp"
            android:fontFamily="@font/dalmoorifont"
            android:text="공지사항"
            android:textColor="#000000"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/nav_cs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="650dp"
            android:fontFamily="@font/dalmoorifont"
            android:text="고객센터"
            android:textColor="#000000"
            android:textSize="15dp"></TextView>
    </RelativeLayout>

</LinearLayout>